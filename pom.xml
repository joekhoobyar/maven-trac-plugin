<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.googlecode.maven.plugin</groupId>
	<artifactId>maven-trac-plugin</artifactId>
	<packaging>maven-plugin</packaging>
	<version>1.0-SNAPSHOT</version>
	<name>maven-trac-plugin Maven Mojo</name>
	<url>http://maven.apache.org</url>
	<dependencies>
		<dependency>
			<groupId>org.apache.maven</groupId>
			<artifactId>maven-plugin-api</artifactId>
			<version>2.0</version>
		</dependency>
		<dependency>
			<groupId>org.apache.xmlrpc</groupId>
			<artifactId>xmlrpc-client</artifactId>
			<version>3.1</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<profiles>
		<profile>
			<id>test</id>
			<build>
				<plugins>
					<plugin>
						<groupId>com.googlecode.maven.plugin</groupId>
						<artifactId>maven-trac-plugin</artifactId>
						<executions>
							<execution>
								<id>test</id>
								<phase>compile</phase>
								<goals>
									<goal>new-ticket</goal>
									<goal>update-milestone</goal>
								</goals>
								<configuration>
									<url>
										http://localhost:8000/myproject/login/xmlrpc
									</url>
									<basicAuth>
										<userName>admin</userName>
										<password>admin</password>
									</basicAuth>
									<tickets>
										<ticket>
											<summary>
												<![CDATA[new ticket from maven plugin]]>
											</summary>
											<description>
												this is test.
											</description>
											<type>defect</type>
											<component>
												component1
											</component>
											<priority>minor</priority>
											<milestone>
												milestone2
											</milestone>
										</ticket>
									</tickets>
									<updateMilestone>
										<milestone>
											milestone2
										</milestone>
										<text>
											${pom.groupId}/${pom.artifactId}-${pom.version}
										</text>
									</updateMilestone>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
